bedtools bamtobed -bed12 -i 5Y_genome_primary.bam > 5Y_primary.bed12
awk '$3 == "CDS"' gencode.v31.annotation.gtf > gencode.v31.annotation.CDS.gtf
bedtools intersect -s -F 1.0 -u -a 5Y_primary.bed12 -b gencode.v31.annotation.CDS.gtf > 5Y_full_length.bed12
