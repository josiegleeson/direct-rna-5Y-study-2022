# After downloading pycoQC with Anaconda the following scripts were run in jupyter notebook to produce the figures
# pycoQC version 2.2.3

from pycoQC.pycoQC import pycoQC
from plotly.offline import plot, iplot, init_notebook_mode
init_notebook_mode (connected=False)
import pandas
import numpy
import csv

# import summary text file
p = pycoQC("/Users/JosieGleeson/Documents/sequencing_summary.txt")
print (p)

# 2D length v quality plot
fig = p.reads_len_qual_2D()
iplot(fig, show_link=True)

# read length distribution
fig = p.reads_len_1D()
iplot(fig, show_link=True)

# read quality distribution
fig = p.reads_qual_1D()
iplot(fig, show_link=True)

# quality over time
fig = p.qual_over_time ()
iplot(fig, show_link=True)

# length over time
fig = p.len_over_time ()
iplot(fig, show_link=True)

